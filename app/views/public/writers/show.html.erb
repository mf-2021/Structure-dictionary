<div class="container">
  <h4 class="mt-3"><%= link_to "#{current_user.name}さん", edit_writer_path(current_user.id) %>のマイページ</h4>
  <h4 class="mt-3">執筆一覧</h4>
  <div class="d-flex flex-wrap">
    <% @structures.each do |structure| %>
    <div class="my-2 mx-3">
      <section>
        <%= link_to writing_path(structure) do %>
          <%= attachment_image_tag structure, :image, size:"200x200", format:"jpeg", fallback: "no_image.jpg" %>
        <% end %>
      </section>
      <h6><%= structure.name %></h6>
    </div>
    <% end %>
  </div>
  <p><%= link_to "退会する", unsubscribe_writers_path %></p>
</div>