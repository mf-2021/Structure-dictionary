<div class="container">
  <h4 class="mt-3 border-bottom">執筆編集</h4>
  <div class="form-group">
    <%= form_with model:@structure, url:writing_path(params[:id]), local:true do |f| %>

      <!--設計者氏名入力欄-->
      <div class="row mt-3">
        <div class="col">
          <%= f.label :設計者名 %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= f.text_field :last_name, class:"form-control" %>
        </div>
        <div class="col">
          <%= f.text_field :first_name, class:"form-control" %>
        </div>
      </div>

      <!--建築・土木構造物名入力欄-->
      <div class="row mt-3">
        <div class="col">
          <%= f.label :建築・土木構造物名 %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= f.text_field :name, class:"form-control" %>
        </div>
      </div>

      <!--ジャンル選択欄-->
      <div class="row mt-3">
        <div class="col">
          <%= f.label :ジャンル %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= collection_select(:genre, :name, @genres, :id, :name, class:"form-control") %>
        </div>
      </div>

      <!--郵便番号入力欄-->
      <div class="row mt-3">
        <div class="col">
          <%= f.label :郵便番号 %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= f.text_field :postal_code, class:"form-control" %>
        </div>
      </div>

      <!--都道府県入力欄-->
      <div class="row mt-3">
        <div class="col">
          <%= f.label :都道府県 %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= f.text_field :prefecture, class:"form-control" %>
        </div>
      </div>

      <!--市区町村入力欄-->
      <div class="row mt-3">
        <div class="col">
          <%= f.label :市区町村 %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= f.text_field :city, class:"form-control" %>
        </div>
      </div>

      <!--町丁番地入力欄-->
      <div class="row mt-3">
        <div class="col">
          <%= f.label :町丁番地 %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= f.text_field :address, class:"form-control" %>
        </div>
      </div>

      <!--写真アップロード欄-->
      <div class="row mt-3">
        <div class="col">
          <%= attachment_image_tag @structure, :image, size:"80x80", format:"jpeg", fallback: "no_image.jpg" %>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col">
          <%= f.label :写真 %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= f.attachment_field :image %>
        </div>
      </div>

      <!--説明文入力欄-->
      <div class="row mt-3">
        <div class="col">
          <%= f.label :説明文 %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= f.text_field :introduction, class:"form-control" %>
        </div>
      </div>
      <div class="row my-5">
        <div class="col">
          <%= f.submit '執筆完了', class:"btn btn-dark" %>
        </div>
      </div>
    <% end %>
  </div>
</div>