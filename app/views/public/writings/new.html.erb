<div class="container">
  <h4 class="mt-3 border-bottom">新規執筆</h4>
  <%= form_with model:@writing, url:writings_path, local:true do |f| %>
    <div class="row"><%= f.label :設計者名 %></div>
    <div class="row">
    <%= f.fields_for :designers, @writing.designers.build do |d| %>
      <div class="col">
        <%= d.text_field :last_name, class:"form-control" %>
      </div>
      <div class="col">
        <%= d.text_field :first_name, class:"form-control" %>
      </div>
    <% end %>
    </div>
    <div class="row"><%= f.label :建築・土木構造物名 %></div>
    <div class="row">
      <%= f.text_field :name, class:"form-control" %>
    </div>

    <div class="row"><%= f.label :ジャンル %></div>
    <div class="row">
      <%#= collection_select(:genre, :name, @genres, :id, :name), class:"form-control" %>
    </div>

    <div class="row"><%= f.label :郵便番号 %></div>
    <div class="row">
      <%= f.text_field :postal_code, class:"form-control" %>
    </div>

    <div class="row"><%= f.label :都道府県 %></div>
    <div class="row">
      <%= f.text_field :prefecture, class:"form-control" %>
    </div>

    <div class="row"><%= f.label :市区町村 %></div>
    <div class="row">
      <%= f.text_field :city, class:"form-control" %>
    </div>

    <div class="row"><%= f.label :町丁番地 %></div>
    <div class="row">
      <%#= f.text_field :address, class="form-control" %>
    </div>

    <%= f.fields_for :photos, @writing.photos.build do |ph| %>
      <div class="row"><%= ph.label :写真 %></div>
      <div class="row">
        <%= ph.attachment_field :image, class:"form-control" %>
      </div>
    <% end %>

    <%= f.fields_for :introductions, @writing.introductions.build do |i| %>
      <div class="row"><%= i.label :説明文 %></div>
      <div class="row">
        <%= i.text_field :introduction, class:"form-control" %>
      </div>
    <% end %>

    <%= f.fields_for :tags, @tags do |t| %>
      <div class="row"><%= t.label :タグを付ける %></div>
      <div class="row">
        <%= t.text_field :name, class:"form-control" %>
      </div>
    <% end %>

    <%= f.submit '執筆完了' %>
<% end %>
</div>