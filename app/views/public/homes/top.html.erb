<div class="container">
  <h4 class="mt-3">構造物一覧</h4>
  <div class="d-flex flex-wrap">
    <% @structures.each do |structure| %>
    <div class="my-2 mx-3">
      <section>
        <%= link_to writing_path(structure) do %>
          <%= attachment_image_tag structure, :image, size:"200x200", format:"jpeg", fallback: "no_image.jpg" %>
        <% end %>
      </section>
      <h6><%= structure.name %></h6>
      <h6>執筆者：<%= @users.find(structure.user_id).name %></h6>
    </div>
    <% end %>
  </div>
</div>